<h3>Editar Monitoramento:</h3>
<table width="90%">
<tr>
  <td width="20%">
    <table>
      <tr bgcolor="#1E90FF">
        <td>
           ID
        </td>
        <td>
           Descrição
        </td>
      </tr>
      <% @equipamentos.each do |equipamento|%>
        <tr>
          <td>
            <%= equipamento.id %>
          </td>
          <td>
            <%= equipamento.descricao%>
          </td>
        </tr>
      <% end %>
    </table>
  </td>
    <td align=center>
        <form action="/monitoramento/editar_do">
          <table style="color: black">
            <tr>
              <td colspan=<%=@coluna%> align=center>
                Adicione o Id do equipamento
              </td>
            </tr>
            <% for i in 1..@linha.to_i %>
              <tr>
                <% for j in 1..@coluna.to_i %>
                  <td>
                    <input type="number" name="L<%=i%>C<%=j%>" value="" style="width: 60px">
                  </td>
                <% end %>
              </tr>
            <% end %>
            <tr>
              <td align="left"><input type="submit" value="Enviar"></td>
              <td align="left"><input type="radio" name="form[coluna]" value="<%= @coluna %>" checked>
              <td align="left"><input type="radio" name="form[linha]" value="<%= @linha %>" checked>
            </tr>
          </table>
        </form>
      </td>
   </tr>
</table>
